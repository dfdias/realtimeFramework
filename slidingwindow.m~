classdef slidingwindow < handle

    
    properties
        
        len  %frame length 
        N     %number of window samples
        window % window array
        dir %slide direction

    end
    
    methods 
        function obj = slidingwindow(len,N,dir) %constructor
            obj.len = len
            obj.N = N
            obj.window = zeros(1,N);
            obj.dir = dir
        end
        
       function put(obj,frame)      %adds frame to window
           if obj.dir == 'right'
               aux = obj.window(obj.len : end-obj.len);
               obj.window(1:obj.len) = frame;
               obj.window(lenframe+1: end) = aux;
           end
           if obj.dir == 'left'
                              
               lenframe = length(frame); %calculating here to save computer cycles
               aux = obj.window(1 : end-lenframe);
               obj.window(1:lenframe) = frame;
               obj.window(lenframe+1: end) = aux;
           end
       end
        
       function y = get(obj) 
            y = obj.window;
        end
    end
end